#!/bin/bash

# Changes all the extensions of a group of files in a folder

if [[ "$#" -ne 2 ]]; then
	echo "You must provide exactly two arguments";
	exit 1;
fi

if [[ ${1:0:1} != "." || ${2:0:1} != "." ]]; then
	echo "You must provide file extensions as arguments, starting with a dot";
	exit 1;
fi


for f in *"$1"; do
	base=$(basename "$f" "$1");
	mv "$f" "${base}$2";
done

exit 0;

