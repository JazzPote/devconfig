#!/bin/bash


# Reads from standard input and doesn't print anything until the line matches a
# match string.

if [[ ! $1 ]]; then
    echo "Need first argument" >&2
    exit 1
fi

found=""
while read -r || [[ $REPLY ]]; do
    if [[ ! $found ]]; then
        if [[ "$REPLY" =~ "$1" ]]; then
            found=1
        else
            continue
        fi
    fi
    echo "$REPLY"
done

exit 0

